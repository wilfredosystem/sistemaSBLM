@charset "utf-8";
/* Servicio de Administración Tributaria */
*{
	outline:0;
}
img{
	border:0px;
}
body{
	margin:0;
	background:url(../images/principal/bg-int.jpg);
	outline:none;

}
p,h1,h2,h3{
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	font-size:13px;
	margin:4px;
	color:#333;
}
#logo-SAT{
	width:173px;
	height:72px;
	display:block;
	background:url(../images/principal/logo-SAT.png) no-repeat 30px 17px;
	text-indent:-8000px;
	float:left;
	margin-right:50px;
}
#titulo-sistema{
	width:700px;
	float:left;
	margin:20px auto 0 auto;
}
.titulo-sistema{
	font-size:20px;
	font-weight:bold;
	color:#FFF;
	text-align:center;
}
label{
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	color:#184FA0;
	font-size:12px;
	text-align:center;
	color:#333333;
	text-align:left;
	margin:5px;
}
input{

	border-radius:5px;
	-moz-border-radius:5px;
	-ms-border-radius:5px;
	-o-border-radius:5px;
	-webkit-border-radius:5px;
	margin:5px;
}
.imagen-izq{
	float:left;
	margin-right:20px;
}
.sesion-titulo{
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	font-size:20px;
	text-align:left;
	margin-bottom:10px;
}
.texto-plomo{
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	font-size:14px;
	color:#74778B;
	text-align:justify;
	margin-bottom:10px;
}
.texto-azul{
	color:#0066CC;
}
.texto-rojo{
	color:#C60005;
	border-bottom: dotted 2px #C60005;
}
.texto-ambar{
	color:#D7A809;
	border-bottom: dotted 2px #D7A809;
}

/* -------------- MAQUETACIÓN -----------*/
#contenedor-int{
	width:960px;
	height:auto;
	margin: 0 auto;
}
#header{
	width:100%;
	height:120px;
	background:url(../images/principal/fondo-azul.jpg);
	margin-bottom:7px;
}
#cabecera{
	width:960px;
	height:120px;
	margin:0 auto;
	margin-bottom:7px;
	position:relative;

}
#body{
	height:auto;
}
#nav{
	width:280px;
	height:auto;
	float:left;
}
#contenido{
	width:660px;
	min-height:250px;
	height:auto;
	display:block;
	float:left;
	background:#F3F5F4;
	padding:10px;
	border-bottom:#A4ADB4 1px solid;
	border-top:#A4ADB4 1px solid;
}
#contenido-ancho{
	width:860px;
	height:120px;
	display:block;
	float:left;
	background:#F3F5F4;
	padding:50px;
	border-bottom:#A4ADB4 1px solid;
	border-top:#A4ADB4 1px solid;
}

