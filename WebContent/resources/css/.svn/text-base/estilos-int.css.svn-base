/* ------------------ TITULO-MENU ----------------*/
#titulo-menu{
	height:30px;
	border-bottom: dotted 1px #8C949B;
	margin-bottom:20px;
}
.titulo-menu{
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	font-size:15px;
	color:#8C949B;
}

/* ------------------ CONTENIDO-INTERIOR ----------------*/
.boton{
	width:120px;
	height:25px;
	display:block;
	margin:auto;
	background:url(../images/principal/boton-plomo.png) no-repeat;
	border:0;
	color:#1A4B82;
	font-weight:bold;
	cursor:pointer;
}
.table{
	margin:20px auto;
}
.titulo-table{
	height:25px;
	background:url(../images/principal/bg-titulo-table.jpg);
	border-right:1px solid #fff;
	text-align:center;
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	color:#184FA0;
	font-weight:bold;
	font-size:14px;
}
.celda1{
	background:#E7E8ED;
	border-right:1px solid #fff;
}
.celda2{
	background:#DADCE8;
	border-right:1px solid #fff;
}
.texto-celda{
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	color:#184FA0;
	font-size:12px;
	text-align:center;
	color:#333333;
}

/* -------------- ID --------------- */

#cerrar{
	width:auto;
	height:20px;
	display:block;
	color:#ccc;
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	font-size:13px;
	text-align:center;
	padding:4px 10px;
	background:#0B528C;
	position:absolute;
	top:0;
	right:0;
	border-radius:0 0 5px 5px;
	-moz-border-radius:0 0 5px 5px;
	-ms-border-radius:0 0 5px 5px;
	-o-border-radius:0 0 5px 5px;
	-webkit-border-radius:0 0 5px 5px;
}
#cerrar a{
	color:#ccc;
	text-decoration:none;
}
#cerrar a:hover{
	color:#fff;
	text-decoration:underline;
}
#id{
	width:auto;
	height:20px;
	display:block;
	color:#ccc;
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	font-size:13px;
	text-align:center;
	position:absolute;
	top:95px;
	right:0;
}
