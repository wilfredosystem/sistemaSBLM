function levantarVentanaPrincipal(url, ancho, alto) {
	day = new Date();
	id = day.getTime();
	eval("page" + id + " = window.open(url, '" + id
			+ "', 'toolbar=No,location=0,scrollbars=No,status=No,"
			+ "resizable=No,fullscreen=No,width=" + ancho + ",height= " + alto
			+ ",top=0, left=0');");
}

